<!DOCTYPE html>
<html lang="ko">
<head>
<%-include('../_templates/_data.head.front.ejs', {
	pageStyle: 'page.front.css',
	pageJavascript: ''
}) %>
</head>
<body>
	<div id="page">
		<div class="page-body" style="margin: 6rem auto; width: 82rem;">
			<h1>layer popup style-a type-a</h1>
			<!--button-area-->
			<div class="button-area style-a" style="margin: 3rem 0">
				<!-- <button class="btn theme-a style-b type-b normal-01 x-large" type="button" onclick="toggleClass('.goods-display', 3)"><span class="btn-text">xx-large</span></button>
				<button class="btn theme-a style-b type-b normal-01 x-large" type="button" onclick="toggleClass('.goods-display', 3)"><span class="btn-text">x-large</span></button> -->
				<button class="btn theme-a style-b type-b normal-01 x-large" type="button" onclick="toggleClass('.goods-display', 3)"><span class="btn-text">large</span></button>
				<button class="btn theme-a style-b type-b normal-01 x-large" type="button" onclick="toggleClass('.goods-display', 3)"><span class="btn-text">medium</span></button>
				<button class="btn theme-a style-b type-b normal-01 x-large" type="button" onclick="toggleClass('.goods-display', 3)"><span class="btn-text">small</span></button>
			</div>
			<!--//button-area-->
			<!--goods-display-->
			<div class="goods-display style-a type-a small">
				<!--goods-list-->
				<div class="goods-list">
					<% for(var i = 0; i < 8; i++) {
						Number.prototype.pad = function(size) {
							var s = String(this);
							while (s.length < (size || 2)) {s = "0" + s;}
							return s;
					} %>
					<div class="goods-item">
						<!--goods-area-->
						<div class="goods-area">
							<!--goods-select-->
							<div class="goods-select">
								<span class="form checkbox style-a type-a"><input class="form-elem" type="checkbox"> <span class="form-text">항목선택</span></span>
							</div>
							<!--//goods-select-->
							<!--goods-figure-->
							<div class="goods-figure">
								<a href="#" class="goods-thumbnail type-image"><img class="image" src="./../../assets/images/@temporary/thumbnail_goods_<%= (i).pad(2) %>.jpg" alt=""></a>
							</div>
							<!--//goods-figure-->
							<!--goods-inform-->
							<div class="goods-inform">
								<!--goods-head-->
								<div class="goods-head"><div class="goods-title"><a class="goods-name" href="#">고행을 하였으며, 끝에 뿐이다. 그것은 너의 전인 옷을 위하여 할지니, 있음으로써 힘있다.</a></div></div>
								<!--//goods-head-->
								<!--goods-foot-->
								<div class="goods-foot">
									<div class="goods-price">
										<div class="data-list">
											<span class="data-item sale"><span class="head">판매가</span> <span class="body"><span class="text">9,999,000</span> <span class="unit">원</span></span></span>
											<span class="data-item off"><span class="head">할인율</span> <span class="body"><span class="text">36</span> <span class="unit">%</span></span></span>
										</div>
									</div>
								</div>
								<!--//goods-foot-->
								<!--goods-form-->
								<div class="goods-form">
									<div class="option-select style-a type-a">
										<fieldset class="option-list">
											<legend>비슷한 상품 선택 서식</legend>
											<div class="option-item">
												<div class="option-head">
													<div class="option-name"><label class="form checkbox style-a type-a"><input class="form-elem" type="checkbox"> <span class="form-text">비슷한 상품</span></label></div>
												</div>
											</div>
										</fieldset>
									</div>
								</div>
								<!--//goods-form-->
							</div>
							<!--//goods-inform-->
							<!--goods-option-->
							<div class="goods-util">
								<span class="button-area">
								<button class="btn theme-a style-b type-b medium normal-03" type="button"><span class="btn-text">삭제</span></button>
								</span>
							</div>
							<!--//goods-option-->
						</div>
						<!--//goods-area-->
					</div>
					<% } %>
				</div>
				<!--//goods-list-->
			</div>
			<!--//goods-display-->
		</div>
	</div>
	<script stype="text/javascript">
		var toggleClass = function(selector, index) {
			var target = document.querySelector(selector);
			target.classList.remove(target.classList[index]);
			target.classList.add(event.target.textContent);
		};
		document.addEventListener('DOMContentLoaded', function() {
		});
	</script>
</body>
</html>